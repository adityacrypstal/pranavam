                        <option value="null" <%= (user.mothertongue == 'null') ? "SELECTED" : "" %>>Select Mother Tongue
                        </option>
                        <option value="hindi" <%= (user.mothertongue == 'hindi') ? "SELECTED" : "" %>>Hindi</option>
                        <option value="tamil" <%= (user.mothertongue == 'tamil') ? "SELECTED" : "" %>>Tamil</option>
                        <option value="kannada" <%= (user.mothertongue == 'kannada') ? "SELECTED" : "" %>>Kannada
                        </option>
                        <option value="telugu" <%= (user.mothertongue == 'telugu') ? "SELECTED" : "" %>>Telugu</option>
                        <option value="malayalam" <%= (user.mothertongue == 'malayalam') ? "SELECTED" : "" %>>Malayalam
