                        <option value="bba" <%= (user.education == 'bba') ? "SELECTED" : "" %>>BBA</option>
                        <option value="mba" <%= (user.education == 'mba') ? "SELECTED" : "" %>>MBA</option>
                        <option value="ttc" <%= (user.education == 'ttc') ? "SELECTED" : "" %>>TTC</option>
                    </select>      
                </div>
                <div class="col-md-3">
                    <select name="employed" class="form-control" id="exampleFormControlSelect1">
                        <option value="null" <%= (user.employed == 'null') ? "SELECTED" : "" %>>Employed In</option>
                        <option value="government" <%= (user.employed == 'government') ? "SELECTED" : "" %>>Government</option>
                        <option value="private" <%= (user.employed == 'private') ? "SELECTED" : "" %>>Private</option>
                        <option value="defence" <%= (user.employed == 'defence') ? "SELECTED" : "" %>>Defence</option>
                        <option value="busines" <%= (user.employed == 'business') ? "SELECTED" : "" %>>Business</option>
                        <option value="self" <%= (user.employed == 'self') ? "SELECTED" : "" %>>Self Employed</option>
                        <option value="not employed" <%= (user.employed == 'not employed') ? "SELECTED" : "" %></option>>Not Employed</option>
                    </select>
                </div>
                <div class="col-md-3">
                    <input type="text" class="form-control" name="occupation" placeholder="Occupation" >
                </div>
                <div class="col-md-3">
                    <input type="Number" class="form-control" name="lpa" placeholder="Annual Income(In LPA)">
