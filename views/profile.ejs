                    </select>
                </div>
                <div class="col-md-3">
                    <select name="type" class="form-control" id="exampleFormControlSelect1">
                        <option value="null" <%= (user.type == 'null') ? "SELECTED" : "" %>>Family Type</option>
                        <option value="joint" <%= (user.type == 'joint') ? "SELECTED" : "" %>>Joint</option>
                        <option value="nuclear" <%= (user.type == 'nuclear') ? "SELECTED" : "" %>>Nuclear</option>

                    </select>
                </div>
                <div class="col-md-3">
                    <select name="values" class="form-control" id="exampleFormControlSelect1">
