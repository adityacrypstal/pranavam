                        <option value="secondary" <%= (user.education == 'secondary') ? "SELECTED" : "" %>>Secondary</option>
                        <option value="higher secondary" <%= (user.education == 'higher secondary') ? "SELECTED" : "" %>>Higher Secondary</option>
                        <option value="polytechnique" <%= (user.education == 'polytechnique') ? "SELECTED" : "" %>>Polytechnique</option>
                        <option value="b tech" <%= (user.education == 'b tech') ? "SELECTED" : "" %>>B Tech</option>
                        <option value="m tech" <%= (user.values == 'm tech') ? "SELECTED" : "" %></option>>M Tech</option>
                        <option value="b arc" <%= (user.education == 'b arc') ? "SELECTED" : "" %>>B Arc</option>
                        <option value="diploma" <%= (user.education == 'diploma') ? "SELECTED" : "" %>>Diploma</option>
                        <option value="mbbs" <%= (user.education == 'mbbs') ? "SELECTED" : "" %>>MBBS</option>
                        <option value="m arc" <%= (user.education == 'm arc') ? "SELECTED" : "" %>>M Arc</option>
                        <option value="ug arts" <%= (user.education == 'ug arts') ? "SELECTED" : "" %>>UG in arts</option>
                        <option value="pg arts" <%= (user.education == 'pg arts') ? "SELECTED" : "" %>>PG in arts</option>
                        <option value="ug science" <%= (user.education == 'ug science') ? "SELECTED" : "" %>>UG in science</option>
                        <option value="pg science" <%= (user.education == 'pg science') ? "SELECTED" : "" %>>PG in science</option>
                        <option value="bca" <%= (user.education == 'bca') ? "SELECTED" : "" %>>BCA</option>
