                        <option value="orthodox" <%= (user.values == 'orthodox') ? "SELECTED" : "" %>>Orthodox</option>
                        <option value="traditional" <%= (user.values == 'traditional') ? "SELECTED" : "" %>>Traditional
                        </option>
                        <option value="moderate" <%= (user.values == 'moderate') ? "SELECTED" : "" %>>Moderate</option>

                    </select>
                </div>
            </div>
            <br>

            <div class="row">
                <p class="step">Images </p>
            </div>
            <hr>
            <diw class="row">
                <div class="col"><img src="data:image/png;base64,<%=user.photo1.toString('base64')%>"
                        class="img-responsive" alt=""></div>
                <div class="col"><img src="data:image/png;base64,<%=user.photo2.toString('base64')%>"
                        class="img-responsive" alt=""></div>
                <div class="col"><img src="data:image/png;base64,<%=user.photo3.toString('base64')%>"
                        class="img-responsive" alt=""></div>
                <div class="col"><img src="data:image/png;base64,<%=user.photo4.toString('base64')%>"
                        class="img-responsive" alt=""></div>
            </diw>
            <div class="row">
                <div class=" col-md-3">
                    <div class="custom-file">
                        <input id="inputGroupFile01" type="file" name="photo1" required>
                        <label class="custom-file-label" for="inputGroupFile01">Choose new photo here</label>
                    </div>
                </div>
                <div class=" col-md-3">
